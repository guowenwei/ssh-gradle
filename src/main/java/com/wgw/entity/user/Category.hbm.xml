<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- hibernate的对象关系映射文件 -->
<hibernate-mapping>
	<!-- 把实体类映射到表 -->
	<class name="com.wgw.entity.user.Category" table="category">
		<!-- 把实体类的OID映射表的主键 -->
		<id name="id" column="id" type="int">
			<generator class="native"/>
		</id>
		
		<!-- 把普通属性映射到表的字段 -->
		<property name="name" column="name"/>

		<many-to-one name="parent" column="p_id" foreign-key="p_id" cascade="save-update"></many-to-one>
		
		<bag name="categories" inverse="true" cascade="all">
			<key column="p_id"></key>
			<one-to-many class="com.wgw.entity.user.Category"></one-to-many>
		</bag>

	</class>
</hibernate-mapping>
